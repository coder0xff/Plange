type_abstraction <- (<Type> t) {
	return type {
	private:
		<t> value;

		construct <- (<t> v) {
			value <- v;
		};

		explicit_cast <- 
			(<t> v) {
				return this_type(v);
			}
		|
			() {
				return this.value;
			}

		get <- { return value; };

		set <- (<t> v) { value <- v };
	};
}
